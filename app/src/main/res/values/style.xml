<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_item">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="circle_nav_header">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>
    
    <style name="radius_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="rounded_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="nav_drawer" parent="Widget.Design.NavigationView">
        <item name="itemTextAppearance">@style/text_item</item>
        <item name="itemIconTint">@color/color_nav_item</item>
        <item name="itemTextColor">@color/color_nav_text</item>
        <item name="itemBackground">@drawable/state_background_nav</item>
    </style>
</resources>