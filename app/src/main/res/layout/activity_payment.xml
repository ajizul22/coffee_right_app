<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="35dp"
        tools:context=".main.payment.PaymentActivity"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/ic_arrow_left_black"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title_payment"
                    android:text="Payment Methods"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/view_title_payment"
                    android:background="@color/theme_dark_grey"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_payment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="30dp"
                    app:iss_auto_cycle="false"
                    app:iss_delay="0"
                    app:iss_period="1000"
                    app:iss_corner_radius="5"
                    app:iss_placeholder="@drawable/img_bg_grey"
                    app:iss_error_image="@drawable/img_bg_grey"
                    app:layout_constraintTop_toBottomOf="@id/view_title_payment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                </com.denzcoskun.imageslider.ImageSlider>

                <View
                    android:id="@+id/view_under_image_slider"
                    android:background="@color/theme_dark_grey"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/image_slider_payment_method"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list_order"
                    android:layout_marginTop="30dp"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toBottomOf="@id/view_under_image_slider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_payment"
                    />

                <View
                    android:id="@+id/view_under_rv"
                    android:background="@color/theme_dark_grey"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_list_order"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv__title_subtotal"
                    android:text="Subtotal"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/view_under_rv"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_subtotal"
                    android:text="IDR 105.000"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv__title_subtotal"
                    app:layout_constraintBottom_toBottomOf="@id/tv__title_subtotal"/>

                <TextView
                    android:id="@+id/tv__title_tax"
                    android:text="Tax"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/tv__title_subtotal"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_tax"
                    android:text="IDR 12.000"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv__title_tax"
                    app:layout_constraintBottom_toBottomOf="@id/tv__title_tax"/>

                <TextView
                    android:id="@+id/tv_title_total"
                    android:text="Total"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_tax"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_total"
                    android:text="IDR 117.000"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_title_total"
                    app:layout_constraintBottom_toBottomOf="@id/tv_title_total"/>

                <Button
                    android:layout_marginTop="30dp"
                    android:id="@+id/btn_pay_now"
                    android:text="Pay Now"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="17sp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/shape_bg_choco_2"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
</layout>