<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_product"
            android:layout_width="100dp"
            android:layout_height="108dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="3dp"
            app:shapeAppearance="@style/radius_image"
            android:src="@drawable/img_coffee"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hazelnut Latte"
            android:textSize="22sp"
            android:textAlignment="center"
            android:lineSpacingExtra="-10dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/iv_product"
            app:layout_constraintStart_toEndOf="@id/iv_product"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            android:text="IDR 25.000"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/theme_choco"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@id/tv_product_name"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/tv_size_product"
            android:text="XL (Extra Large)"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_product_price"
            app:layout_constraintStart_toStartOf="@id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinner_amount_product"
            android:layout_marginLeft="100dp"
            android:background="@drawable/style_spinner_cart"
            app:layout_constraintTop_toTopOf="@id/tv_size_product"
            app:layout_constraintStart_toEndOf="@id/tv_size_product"
            app:layout_constraintBottom_toBottomOf="@id/tv_size_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>