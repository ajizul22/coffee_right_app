<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_product"
        android:layout_width="168dp"
        android:layout_height="189dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="3dp"
        app:shapeAppearance="@style/radius_image"
        android:src="@drawable/img_coffee"
        android:scaleType="center"/>

        <ImageView
            android:layout_width="220dp"
            android:layout_height="290dp"
            android:background="@drawable/bg_white_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Hazelnut Latte"
            android:textSize="22sp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="@id/iv_product"
            app:layout_constraintRight_toRightOf="@id/iv_product"
            android:lineSpacingExtra="-10dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/iv_product"/>

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            android:text="IDR 25.000"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/theme_choco"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>