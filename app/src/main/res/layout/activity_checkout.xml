<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.checkout.CheckoutActivity"
        android:background="@color/theme_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="35dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back"
                    android:src="@drawable/ic_arrow_left_choco"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_toolbar_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Checkout"
                    android:textColor="@color/theme_choco"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_back"
                    app:layout_constraintTop_toTopOf="@+id/iv_back" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_white"
                android:elevation="3dp"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp">

                <TextView
                    android:id="@+id/tv_address"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_customer_address"
                    android:text="Iskandar Street, Jakarta"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:editable="false"
                    android:background="@drawable/shape_bg_grey_to_blue"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_white"
                android:elevation="3dp"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp">

                <TextView
                    android:id="@+id/tv_title_set_delivery_method"
                    android:text="Delivery and Time"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_delivery_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_set_delivery_method"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_set_delivery_method"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true" />

                <TextView
                    android:id="@+id/tv_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Now"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cg_delivery_method" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_now"
                    app:layout_constraintEnd_toEndOf="@+id/cg_delivery_method"
                    app:layout_constraintStart_toEndOf="@+id/tv_now"
                    app:layout_constraintTop_toTopOf="@+id/tv_now"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true" />

                <TextView
                    android:id="@+id/tv_set_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Set time"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_now" />

                <EditText
                    android:id="@+id/et_time_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/shape_bg_grey_stroke"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Enter time for reservation"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/icon_home"
                    android:textSize="11sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/tv_set_time"
                    app:layout_constraintStart_toEndOf="@+id/tv_set_time"
                    app:layout_constraintTop_toTopOf="@id/tv_set_time" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_white"
                android:elevation="3dp"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/tv_title_cost"
                    android:text="Cost"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_total_cost"
                    android:text="IDR 123.000"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_confirm_and_pay"
                android:layout_marginTop="15dp"
                android:text="Confirm and Pay"
                android:fontFamily="@font/poppins_bold"
                android:textSize="17sp"
                android:paddingVertical="10dp"
                android:background="@drawable/shape_bg_choco_2"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>