<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.istekno.coffeebreakapp.main.detailproduct.DetailProductResponse.DataProduct" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parent_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#362115">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_row_left_white"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_cart"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_product"
                    android:layout_width="220dp"
                    android:layout_height="221dp"
                    android:src="@drawable/img_coffee_detail"
                    app:shapeAppearance="@style/rounded_image"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="100dp"
                    app:layout_constraintLeft_toRightOf="@id/tv_price"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.productPrice}"
                    android:background="@drawable/bg_radius_yellow_price"
                    android:textAlignment="center"
                    android:paddingVertical="3dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/content"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="750dp"
                    android:layout_marginTop="230dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_detail_product_content">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.productName}"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="28sp"
                        android:layout_marginTop="100dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery only on \nMonday to friday at 1 - 7 pm"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:textColor="@color/theme_choco"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
                        app:layout_constraintLeft_toLeftOf="@id/tv_desc"/>

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="@{model.productDesc}"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/theme_choco"
                        android:layout_marginTop="30dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_info"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose a size"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_desc"
                        app:layout_constraintLeft_toLeftOf="@id/tv_desc"
                        app:layout_constraintRight_toRightOf="@id/tv_desc"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/content_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_size"
                        app:layout_constraintLeft_toLeftOf="@id/tv_size"
                        app:layout_constraintRight_toRightOf="@id/tv_size">

                        <TextView
                            android:id="@+id/btn_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="20sp"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="10dp"
                            android:background="@drawable/bg_size"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                        <TextView
                            android:id="@+id/btn_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="20sp"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="10dp"
                            android:background="@drawable/bg_size"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/btn_regular"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/btn_extra_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XL"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="20sp"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="10dp"
                            android:background="@drawable/bg_size"
                            android:layout_marginLeft="20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/btn_large"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_cart"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Add to cart"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginHorizontal="20dp"
                        app:cornerRadius="15dp"
                        app:layout_constraintTop_toBottomOf="@id/content_size"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

