<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.istekno.coffeebreakapp.main.maincontent.homepage.GetProductResponse.DataProduct" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_product"
            android:layout_width="85dp"
            android:layout_height="86dp"
            android:elevation="1dp"
            android:src="@drawable/img_coffee"
            android:scaleType="center"
            app:shapeAppearance="@style/rounded_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_promo_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_white_radius"
            android:elevation="2dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="10dp"
            android:text="IDR 0"
            android:textAlignment="center"
            android:textColor="@color/theme_choco"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_product_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/bg_item"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_white_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:lineSpacingExtra="-10dp"
            android:maxLines="2"
            android:text="@{model.productName}"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/tv_product_price"
            app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
            app:layout_constraintLeft_toLeftOf="@id/tv_product_price"
            app:layout_constraintRight_toRightOf="@id/tv_product_price" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_item"
            app:layout_constraintEnd_toEndOf="@+id/tv_product_name"
            app:layout_constraintStart_toStartOf="@+id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>